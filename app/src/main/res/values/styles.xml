<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Permission.Theme.Sample" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="Permission.Theme.Sample.Activity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Permission.WrapContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Permission.WrapContent.WidthMatchParent">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Permission.MatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Permission.Toolbar" parent="Permission.WrapContent.WidthMatchParent">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Permission.Theme.Sample.Button" parent="Widget.AppCompat.Button"/>

    <style name="Permission.Button" parent="Permission.WrapContent">
        <item name="android:theme">@style/Permission.Theme.Sample.Button</item>
        <item name="android:layout_margin">@dimen/dp_1</item>
    </style>

    <style name="Permission.Button.Weight">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Permission.Button.Weight.Horizontal">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Permission.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>